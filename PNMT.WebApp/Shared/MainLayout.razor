

@inherits LayoutComponentBase

<MudThemeProvider Theme="PNMTWebAppTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        PNMT
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <MyNavMenu/>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    MudTheme PNMTWebAppTheme = new MudTheme()
        {
            Palette = new PaletteLight()
            {
                Primary = "#0033CC",
                AppbarBackground = "#0033CC"
            },
        };
}